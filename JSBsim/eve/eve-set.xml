<?xml version="2.0"?>

<PropertyList>

	<sim>

		<description>Eve v7</description>
		<author>Natilus
		</author>
		<status>crazy</status>

		<rating>
			<FDM type="int">3</FDM>
			<systems type="int">1</systems>
			<cockpit type="int">0</cockpit>
			<model type="int">2</model>
		</rating>

		<flight-model>jsb</flight-model>
		<aero>eve</aero>

		<virtual-cockpit archive="y">true</virtual-cockpit>
		<allow-toggle-cockpit archive="y">false
		</allow-toggle-cockpit>


		<view n="0">
			<internal archive="y">true</internal>
			<config>
				<pitch-offset-deg>0.99</pitch-offset-deg>
				<x-offset-m archive="y">0.0</x-offset-m>
				<y-offset-m archive="y">0.99</y-offset-m>
				<z-offset-m archive="y">-4.49</z-offset-m>
			</config>
		</view>

		<model>
			<path>Aircraft/eve/Models/eve.xml</path>
		</model>

		<chase-distance-m>-21</chase-distance-m>


		<ai>
			<scenario>refueling_demo</scenario>
		</ai>

		<!-- turns off GA tower communications -->
		<ATC>
			<enabled type="bool">false</enabled>
		</ATC>

		<!-- turns off GA traffic -->
		<ai-traffic>
			<enabled type="bool">false</enabled>
		</ai-traffic>

		<help>
			<key>
				<name>Shift-Q</name>
				<desc>fuel cutoff switch or lever</desc>
			</key>
		</help>

	</sim>

</PropertyList>